# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/database_name

# JWT Configuration
SECRET_KEY=your_secret_key_here_use_strong_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration - Use comma-separated values for Pydantic parsing
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Web3 Configuration
WEB3_PROVIDER_URI=http://localhost:8545
ESCROW_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
ESCROW_FACTORY_ABI=[]

# Email Configuration (SendGrid)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.sendgrid.net
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
EMAILS_FROM_EMAIL=noreply@yourdomain.com
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Application Configuration
PROJECT_NAME=Decentralized Freelance Marketplace
API_V1_STR=/api/v1

# OAuth Integration Configuration (Platform-wide credentials)
# These are YOUR platform's OAuth apps - each user will connect their own account through them
# Create apps at:
#   - GitHub: https://github.com/settings/developers
#   - Slack: https://api.slack.com/apps
#   - Jira: https://developer.atlassian.com/console/myapps/

GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/integrations/github/callback

SLACK_CLIENT_ID=your_slack_oauth_app_client_id
SLACK_CLIENT_SECRET=your_slack_oauth_app_secret
SLACK_REDIRECT_URI=http://localhost:8000/api/v1/integrations/slack/callback

JIRA_CLIENT_ID=your_jira_oauth_app_client_id
JIRA_CLIENT_SECRET=your_jira_oauth_app_secret
JIRA_REDIRECT_URI=http://localhost:8000/api/v1/integrations/jira/callback

# Frontend Base URL (for OAuth redirects after authorization)
FRONTEND_BASE_URL=http://localhost:3000

# Instructions:
# 1. Copy this file to .env in the same directory
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Generate strong random values for SECRET_KEY and other sensitive data