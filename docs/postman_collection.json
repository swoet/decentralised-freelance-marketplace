{
  "info": {
    "_postman_id": "decentralized-freelance-marketplace-collection",
    "name": "Decentralized Freelance Marketplace API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"role\": \"freelancer\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "{{email}}" },
            { "key": "password", "value": "{{password}}" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/auth/login/access-token",
          "host": ["{{base_url}}"],
          "path": ["auth", "login", "access-token"]
        }
      }
    },
    {
      "name": "Users - Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/users/me",
          "host": ["{{base_url}}"],
          "path": ["users", "me"]
        }
      }
    },
    {
      "name": "Projects - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/projects",
          "host": ["{{base_url}}"],
          "path": ["projects"]
        }
      }
    },
    {
      "name": "Projects - Detail",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/projects/{{project_id}}",
          "host": ["{{base_url}}"],
          "path": ["projects", "{{project_id}}"]
        }
      }
    },
    {
      "name": "Bids - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/bids?project_id={{project_id}}",
          "host": ["{{base_url}}"],
          "path": ["bids"],
          "query": [
            { "key": "project_id", "value": "{{project_id}}" }
          ]
        }
      }
    },
    {
      "name": "Bids - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"freelancer_id\": \"{{user_id}}\",\n  \"amount\": 1000,\n  \"cover_letter\": \"I am interested!\",\n  \"status\": \"pending\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/bids",
          "host": ["{{base_url}}"],
          "path": ["bids"]
        }
      }
    },
    {
      "name": "Escrow - Deploy",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"client\": \"{{client_address}}\",\n  \"freelancer\": \"{{freelancer_address}}\",\n  \"milestone_descriptions\": [\"Design\", \"Dev\"],\n  \"milestone_amounts\": [1000, 2000],\n  \"private_key\": \"{{private_key}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/web3/contracts/deploy",
          "host": ["{{base_url}}"],
          "path": ["web3", "contracts", "deploy"]
        }
      }
    },
    {
      "name": "Escrow - Status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/web3/contracts/{{escrow_address}}/status",
          "host": ["{{base_url}}"],
          "path": ["web3", "contracts", "{{escrow_address}}", "status"]
        }
      }
    },
    {
      "name": "Chat - WebSocket",
      "request": {
        "method": "GET",
        "url": {
          "raw": "ws://localhost:8000/api/v1/ws/chat/{{project_id}}",
          "host": ["ws://localhost:8000"],
          "path": ["api", "v1", "ws", "chat", "{{project_id}}"]
        },
        "description": "Connect via WebSocket for real-time chat."
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api/v1" },
    { "key": "email", "value": "" },
    { "key": "password", "value": "" },
    { "key": "access_token", "value": "" },
    { "key": "project_id", "value": "" },
    { "key": "user_id", "value": "" },
    { "key": "client_address", "value": "" },
    { "key": "freelancer_address", "value": "" },
    { "key": "private_key", "value": "" },
    { "key": "escrow_address", "value": "" }
  ]
} 